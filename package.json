{
  "name": "tslint-react-perf",
  "version": "0.0.2",
  "description": "Lint rules related to React & JSX Performance for TSLint",
  "main": "tslint-react-perf.json",
  "scripts": {
    "build": "tsc -p ./",
    "clean": "rm -rf build/",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "test": "./scripts/test-rules",
    "verify": "run-s build lint test",
    "package": "run-s clean verify",
    "prepublish": "npm run package"
  },
  "dependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "tslint-config-prettier": "^1.12.0",
    "tsutils": "^2.13.1"
  },
  "peerDependencies": {
    "tslint": "^5.1.0",
    "typescript": ">=2.1.0 || >=2.7.0-dev || >=2.8.0-dev",
    "tslint-react": "^3.5.1"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/glob": "^5.0.35",
    "@types/node": "^7.0.13",
    "colors": "^1.2.4",
    "glob": "^7.1.2",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "tslint": "^5.10.0",
    "tslint-react": "^3.5.1",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.3"
  },
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"tslint --fix",
			"prettier --write",
			"git add"
		]
	},
  "repository": {
    "type": "git",
    "url": "https://github.com/palantir/tslint-react.git"
  },
  "license": "Apache-2.0"
}
